<h2>Прибыль компании</h2>
<table>
  <thead>
  <th scope="col"><%= Transaction.human_attribute_name(:date) %></th>
  <th scope="col"><%= Transaction.human_attribute_name(:debit) %></th>
  <th scope="col"><%= Transaction.human_attribute_name(:credit) %></th>
  <th scope="col">Balance</th>
  </thead>
  <tbody>
  <%- @stats.each do |record| %>
    <tr>
      <td><%= record["date"] %></td>
      <td><%= record["debit"] %></td>
      <td><%= record["credit"] %></td>
      <td><%= record["balance"] %></td>
    </tr>
  <%- end %>
  </tbody>
</table>

<hr>
<h2>Попуги</h2>
<table>
  <thead>
  <th scope="col"><%= Transaction.human_attribute_name(:user) %></th>
  <th scope="col"><%= Transaction.human_attribute_name(:balance) %></th>
  <th scope="col"><%= Transaction.human_attribute_name(:tasks) %> opened</th>
  <th scope="col"><%= Transaction.human_attribute_name(:tasks) %> completed</th>
  <th scope="col"><%= Transaction.human_attribute_name(:created_at) %></th>
  </thead>
  <tbody>
  <%- @users.each do |user| %>
    <tr>
      <td><%= link_to user.display_name, user %></td>
      <td><%= user.balance %></td>
      <td><%= user.tasks.not_completed.count %></td>
      <td><%= user.tasks.completed.count %></td>
      <td><%= user.created_at %></td>
    </tr>
  <%- end %>
  </tbody>
</table>